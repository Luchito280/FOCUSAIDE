{
  "name": "focusaide",
  "version": "1.0.0",
  "description": "Una aplicación para mejorar la concentración y el enfoque.",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm:start:electron\" \"npm:start:python\"",
    "start:electron": "electron .",
    "start:python": "python engine/main_engine.py",
    "build": "electron-builder"
  },
  "keywords": [
    "pomodoro",
    "focus",
    "productivity"
  ],
  "author": "Tu Nombre Aquí",
  "license": "ISC",
  "dependencies": {
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.focusaide.app",
    "productName": "FocusAide",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "!engine/*.py",
      "!engine/*.dat"
    ],
    "extraResources": [
      {
        "from": "engine/fca_tracker_svc.exe",
        "to": "app/engine/fca_tracker_svc.exe"
      }
    ]
  }
}